@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["HeaderTitle"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow p-4 mx-auto mt-5 text-center" style="max-width: 320px;">
                <h3 class="mb-3 text-success">@Localizer["TitleSuccess"]</h3>
                <p class="text-muted">@Localizer["TextSuccess"]</p>
                <div class="mt-4">
                    <a href="/Home/Index" class="btn btn-primary">@Localizer["BackToHome"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
